<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:MyApp2.ViewModels"
             x:Class="MyApp2.Views.ControlPanelView"
             x:DataType="vm:ControlPanelViewModel"
             Loaded="UserControl_Loaded"
             Unloaded="UserControl_Unloaded">
    
    <UserControl.Styles>
        <Style Selector="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#357ABD"/>
            <Setter Property="RenderTransform" Value="scale(1.05)"/>
        </Style>
        <Style Selector="Button#StopButton">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>
        <Style Selector="Button#StopButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#C0392B"/>
        </Style>
    </UserControl.Styles>

    <Border Background="#F5F6F5" CornerRadius="15" Padding="20" MinWidth="300">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="Auto"/> <!-- Forward -->
                <RowDefinition Height="Auto"/> <!-- Left/Stop/Right -->
                <RowDefinition Height="Auto"/> <!-- Back -->
                <RowDefinition Height="Auto"/> <!-- Velocity -->
                <RowDefinition Height="Auto"/> <!-- Acceleration -->
                <RowDefinition Height="Auto"/> <!-- Devs Handle -->
                <RowDefinition Height="Auto"/> <!-- Connection Type -->
                <RowDefinition Height="Auto"/> <!-- initialize -->

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Text="Control Panel"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Directional Controls -->
            <Button Grid.Row="1" Grid.Column="1"
                    x:Name="FrontButton"
                    Content="↑ Forward"/>

            <Button Grid.Row="2" Grid.Column="0"
                    x:Name="LeftButton"
                    Content="← Left"/>

            <Button Grid.Row="2" Grid.Column="1"
                    x:Name="StopButton"
                    Content="■ Stop"
                    Command="{Binding StopCommand}"/>

            <Button Grid.Row="2" Grid.Column="2"
                    x:Name="RightButton"
                    Content="Right →"/>

            <Button Grid.Row="3" Grid.Column="1"
                    x:Name="BackButton"
                    Content="↓ Back"/>
            <!-- Velocity Input -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Velocity:" VerticalAlignment="Center" Margin="0,10,5,0"/>

            <TextBox Grid.Row="4" Grid.Column="1"
                    Text="{Binding VelocityText, Mode=TwoWay, TargetNullValue=''}" />


            <!-- Acceleration Input -->
            <TextBlock Grid.Row="5" Grid.Column="0" Text="Acceleration:" VerticalAlignment="Center" Margin="0,10,5,0"/>
            <TextBox Grid.Row="5" Grid.Column="1"
                    Text="{Binding AccelerationText, Mode=TwoWay, TargetNullValue=''}" />
            <TextBlock Grid.Row="6" Grid.Column="0"
                    Text="Dev Handle:"
                    VerticalAlignment="Center"
                    Margin="0,10,5,0"/>

            <ComboBox Grid.Row="6" Grid.Column="1"
                    ItemsSource="{Binding AvailableDevHandles}"
                    SelectedItem="{Binding SelectedDevHandle, Mode=TwoWay}"
                    Margin="0,10,0,0"/>

            <TextBlock Grid.Row="7" Grid.Column="0"
                    Text="Connection Type:"
                    VerticalAlignment="Center"
                    Margin="0,10,5,0"/>

            <ComboBox Grid.Row="7" Grid.Column="1"
                    ItemsSource="{Binding AvailableConnectionType}"
                    SelectedItem="{Binding SelectedConnectionType, Mode=TwoWay}"
                    Margin="0,10,0,0"/>
            <Button Grid.Row="8" Grid.Column="0"
                    Content="Initialize"
                    />        
                    


        </Grid>
    </Border>
</UserControl>